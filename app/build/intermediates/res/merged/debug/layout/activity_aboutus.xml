<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/content_head_bar"/>

    <RelativeLayout
        android:id="@+id/downLoadRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:background="@color/black">
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_logo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="下载中。。。"
                android:gravity="center"
                android:textSize="18sp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/title"
            android:background="#0D84EB"/>
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_below="@+id/title"
            android:layout_height="50dp"
            android:text="正在下载最新安装包，请等待！"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"/>
        <ProgressBar
            android:id="@+id/pgb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_below="@+id/content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/pgb"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/current"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/progress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="20dp"
                android:gravity="center_vertical|right"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@mipmap/logo4"/>

        <TextView
            android:id="@+id/currentVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_name"
            android:textColor="@color/gray_66"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:minHeight="60dp"
            android:textColor="@color/gray_66"
            android:textSize="24sp"
            android:gravity="center"
            android:text="@string/app_name"
            android:layout_below="@+id/img_logo"
            android:layout_alignStart="@+id/img_logo"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_margin="10dp"
            android:background="@color/white"
            >
            <LinearLayout
                android:id="@+id/versionLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/gray_66"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="@string/about_version_check"
                    />
                <TextView
                    android:id="@+id/existVersion"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/main"
                    android:textColorHint="@color/grey"
                    android:layout_marginRight="10dp"
                    android:paddingRight="10dp"
                    android:textSize="18sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/gray_66"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="@string/about_version_introduce"/>
                <TextView
                    android:id="@+id/functionIntroduce"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/gray_66"
                    android:textColorHint="@color/grey"
                    android:layout_marginRight="10dp"
                    android:paddingRight="10dp"
                    android:textSize="18sp"

                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txtAboutUs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:padding="10dp"
              />
        </LinearLayout>
    </ScrollView>
</LinearLayout>