<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white2"
    android:orientation="vertical">

    <include layout="@layout/ease_widget_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_userimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_usernick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_userimage"
            android:gravity="center"
            android:text="测试"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_mycode"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_demoewm" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeUserInfo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/click_selector"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_one"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icon_user" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/img_one"
                    android:layout_toRightOf="@+id/img_one"
                    android:gravity="center"
                    android:text="@string/user_user_info"
                    android:textColor="@color/gray_66"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_arrows" />
            </RelativeLayout>

            <View style="@style/View.Line" />

            <RelativeLayout
                android:id="@+id/relativeUserImage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/click_selector"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_one1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icon_user_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/img_one1"
                    android:layout_toRightOf="@+id/img_one1"
                    android:gravity="center"
                    android:text="@string/user_user_image"
                    android:textColor="@color/gray_66"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_arrows" />
            </RelativeLayout>

            <View style="@style/View.Line" />

            <RelativeLayout
                android:id="@+id/relativeSearchBanck"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/click_selector"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_two"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icon_wallet" />

                <TextView
                    android:id="@+id/editInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@id/img_two"
                    android:gravity="center"
                    android:text="@string/user_account_search"
                    android:textColor="@color/gray_66"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_arrows" />
            </RelativeLayout>

            <View style="@style/View.Line" />

            <RelativeLayout
                android:id="@+id/relativeEditPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/click_selector"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_three"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icon_ps" />

                <TextView
                    android:id="@+id/editPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@id/img_three"
                    android:gravity="center"
                    android:text="@string/user_modification_login"
                    android:textColor="@color/gray_66"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_arrows" />
            </RelativeLayout>

            <View style="@style/View.Line" />

            <RelativeLayout
                android:id="@+id/relativeEditPayPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/click_selector"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_four"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icon_ps" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@+id/img_four"
                    android:gravity="center"
                    android:text="@string/user_modification_pay"
                    android:textColor="@color/gray_66"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_arrows" />
            </RelativeLayout>

            <View style="@style/View.Line" />

            <RelativeLayout
                android:id="@+id/relativeFogetPayPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/click_selector"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_fourth"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icon_ps" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@+id/img_fourth"
                    android:gravity="center"
                    android:text="@string/forget_pay_password"
                    android:textColor="@color/gray_66"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_arrows" />
            </RelativeLayout>

            <View style="@style/View.Line" />
            <RelativeLayout
                android:id="@+id/setting_chat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/click_selector"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_fourth1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icon_ps" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@+id/img_fourth1"
                    android:gravity="center"
                    android:text="@string/setting_chat"
                    android:textColor="@color/gray_66"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_arrows" />
            </RelativeLayout>
            <View style="@style/View.Line" />
            <RelativeLayout
                android:id="@+id/relativeAboutUs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/click_selector"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_five"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icon_aboutus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@+id/img_five"
                    android:gravity="center"
                    android:text="@string/user_about_us"
                    android:textColor="@color/gray_66"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_arrows" />
            </RelativeLayout>

            <View style="@style/View.Line" />

            <RelativeLayout
                android:id="@+id/relativeExitLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/click_selector"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_six"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icon_exit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@+id/img_six"
                    android:gravity="center"
                    android:text="@string/user_exit_login"
                    android:textColor="@color/gray_66"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_arrows" />
            </RelativeLayout>

            <View style="@style/View.Line" />
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
