<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/lightgray"
    >
    <include layout="@layout/content_head_bar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_user"
                        android:layout_marginLeft="15dp"
                        />

                    <EditText
                        android:id="@+id/edtUsername"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="20dp"
                        android:background="@null"
                        android:maxLength="15"
                        android:layout_weight="1"
                        android:hint="@string/register_input_username"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/gray_66"
                        android:singleLine="true"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/register_explain"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/icon_simple_name"/>

                    <EditText
                        android:id="@+id/edtNickName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="20dp"
                        android:background="@null"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:hint="@string/register_input_simplename"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/gray_66"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/icon_phone"/>
                    <Spinner
                        android:id="@+id/countrySpinner"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="10dp"
                        />
                    <EditText
                        android:id="@+id/edtPhone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="20dp"
                        android:background="@null"
                        android:layout_weight="1"
                        android:hint="@string/register_input_phone"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/gray_66"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="15dp"
                            android:src="@mipmap/icon_code"
                            />

                        <EditText
                            android:id="@+id/edtCode"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:paddingLeft="20dp"
                            android:layout_weight="3"
                            android:hint="@string/register_input_code"
                            android:singleLine="true"
                            android:background="@null"
                            android:textColor="@color/gray"
                            android:textColorHint="@color/gray_66"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnGetCode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_sure"
                        android:text="@string/register_get_code"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/icon_ps"/>

                    <EditText
                        android:id="@+id/edtLoginPS"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="20dp"
                        android:background="@null"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:hint="@string/register_input_password"
                        android:inputType="textPassword"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/gray_66"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/icon_ps"/>

                    <EditText
                        android:id="@+id/edtLoginPSAgain"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="20dp"
                        android:background="@null"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:hint="@string/register_input_passwordagain"
                        android:inputType="textPassword"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/gray_66"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/icon_pay_ps"/>

                    <EditText
                        android:id="@+id/edtPayPS"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:background="@null"
                        android:layout_weight="1"
                        android:maxLength="6"
                        android:hint="@string/register_input_paypassword"
                        android:inputType="textPassword"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/gray_66"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/icon_pay_ps"/>

                    <EditText
                        android:id="@+id/edtPayPS_again"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="20dp"
                        android:background="@null"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:hint="@string/register_input_paypassword2"
                        android:inputType="textPassword"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/gray_66"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/lightgray"
                    >

                    <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_sure"
                        android:layout_weight="1"
                        android:text="@string/register_name"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
</LinearLayout>