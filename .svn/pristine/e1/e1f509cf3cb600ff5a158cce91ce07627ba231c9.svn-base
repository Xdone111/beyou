<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@color/lightgray"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/noteSend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray_66"
            android:textSize="16sp"
            android:text="@string/trade_note_receive"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/noteReceive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray_66"
            android:textSize="16sp"
            android:text="@string/trade_note_send"
            android:visibility="visible"
            android:background="#FFD3D3D3"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/receiveRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:visibility="gone"
            />
        <byou.yadun.wallet.view.LoadListView
            android:id="@+id/loadview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:visibility="visible"
            android:dividerHeight="1dp"
            android:scrollbars="none"
            />
        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:visibility="gone"
            android:text="@string/trade_no_send"
            />
    </RelativeLayout>
</LinearLayout>