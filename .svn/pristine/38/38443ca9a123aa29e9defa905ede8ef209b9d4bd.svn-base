<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/lightgray"
    >
    <include layout="@layout/content_head_bar"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:textSize="16sp"
            android:textColor="@color/gray_66"
            android:text="@string/modification_pay_oldps"/>
        <EditText
            android:id="@+id/edtOldPayPs"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray_66"
            android:textColorHint="@color/grey"
            android:inputType="textPassword"
            android:maxLength="6"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:background="@null"
            android:hint="@string/modification_pay_input_old"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:textSize="16sp"
            android:textColor="@color/gray_66"
            android:text="@string/modification_pay_newps"/>
        <EditText
            android:id="@+id/edtNewPayPs"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:textColorHint="@color/grey"
            android:textColor="@color/gray_66"
            android:layout_marginLeft="10dp"
            android:inputType="textPassword"
            android:maxLength="6"
            android:paddingLeft="10dp"
            android:background="@null"
            android:textSize="14sp"
            android:hint="@string/modification_pay_input_new"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:textSize="16sp"
            android:textColor="@color/gray_66"
            android:text="@string/modification_pay_newps_again"/>
        <EditText
            android:id="@+id/edtNewPayPsAgain"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:textColorHint="@color/grey"
            android:textColor="@color/gray_66"
            android:layout_marginLeft="10dp"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:maxLength="6"
            android:textSize="14sp"
            android:background="@null"
            android:hint="@string/modification_pay_input_newAgain"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">
        <Button
            android:id="@+id/btn_surePsyEdit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/btn_sure"
            android:textColor="@color/white"
            android:text="@string/modification_pay_sure"/>
    </RelativeLayout>
</LinearLayout>