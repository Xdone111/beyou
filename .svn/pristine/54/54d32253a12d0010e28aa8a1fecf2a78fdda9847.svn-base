<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            style="@style/MyEdittextStyle"
            android:hint="委托价格"/>
        <EditText
            style="@style/MyEdittextStyle"
            android:hint="委托数量"/>
        <EditText
            style="@style/MyEdittextStyle"
            android:hint="交易额"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:text="交易额以实际成交额为准"
            android:textSize="10sp"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@drawable/selector_btn_click_text_color"
            android:textSize="15sp"
            android:background="@drawable/btn_buy"
            android:text="现货买入"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColorHint="#dd949494"
            android:background="@drawable/top_rounded_edittext"
            android:hint="可用CNY"/>
        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#33949494"/>
        <EditText
            style="@style/MyEdittextStyle1"
            android:hint="可买BCC"/>
        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#33949494"/>
        <EditText
            style="@style/MyEdittextStyle1"
            android:hint="总资产"/>
        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#33949494"/>
        <EditText
            style="@style/MyEdittextStyle1"
            android:hint="净资产"/>
        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#33949494"/>
        <EditText
            style="@style/MyEdittextStyle1"
            android:hint="可用BCC"/>
        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#33949494"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColorHint="#dd949494"
            android:background="@drawable/bottom_rounded_edittext"
            android:hint="冻结CNY"/>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="14dp"
        android:layout_gravity="center"
        android:background="#33949494"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="暂时为空"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="暂时为空"/>
    </LinearLayout>

</LinearLayout>
